# Maintainer: zocker_160 <zocker1600 at posteo dot net>

pkgname=keyboard-center-git
_gitname=keyboard-center
pkgver=88.d30362d
pkgrel=1
pkgdesc="Application by zocker_160 to edit G-keys on G910."
arch=('x86_64')
url="https://github.com/zocker-160/keyboard-center"
license=('GPL3')
depends=('python3' 'python3-pip' 'python3-pyqt5' 'python3-uinput' 'python3-ruamel.yaml' 'python3-usb' 'libnotify-bin')
#conflicts=('')
source=("git+https://github.com/zocker-160/keyboard-center.git")
sha256sums=('SKIP')

install=keyboard-center.install

pkgver() {
  cd ${srcdir}/${_gitname}
  printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd ${srcdir}/${_gitname}
  # nothing to see here
}

build() {  
  cd ${srcdir}/${_gitname}
  # still nothing to see here
}

package() {
  cd ${srcdir}/${_gitname}
  
  install -d -m755 src "$pkgdir"/usr/lib/"$_gitname"
  
  cp -r src/assets "$pkgdir"/usr/lib/"$_gitname"
  cp -r src/config "$pkgdir"/usr/lib/"$_gitname"
  cp -r src/devices "$pkgdir"/usr/lib/"$_gitname"
  cp -r src/gui "$pkgdir"/usr/lib/"$_gitname"
  cp -r src/lib "$pkgdir"/usr/lib/"$_gitname"
  
  install -D -m755 linux_packaging/assets/keyboard-center.sh "$pkgdir"/usr/bin/"$_gitname"
  
  install -D -m755 src/main.py -t "$pkgdir"/usr/lib/"$_gitname"
  install -D -m755 src/service.py -t "$pkgdir"/usr/lib/"$_gitname"
  install -D -m644 src/keyboard-center.service -t "$pkgdir"/usr/lib/systemd/user
  
  install -D -m644 linux_packaging/assets/keyboard-center.png -t "$pkgdir"/usr/share/icons/hicolor/512x512/apps
  install -D -m644 linux_packaging/assets/keyboard-center.desktop -t "$pkgdir"/usr/share/applications  
}
